<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/backgroundColor"
    >

    <include
        layout="@layout/tool_bar"
        ></include>

    <TextView
        android:text = "What would you like to do?"
        android:id= "@+id/activityChoice"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/headline_text"
        android:typeface="serif"

        android:gravity="center"
        android:elevation="8dp"
        android:padding="4dp"
        android:background="@drawable/rounded_white_rectangle"
        android:layout_below="@+id/tbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp" />



    <Button
        android:id="@+id/btnGoToCreatePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create"
        android:background="@drawable/rounded_green_rectangle"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/activityChoice"
        android:textSize="@dimen/button_text"
        android:typeface="serif"
        android:padding="@dimen/button_padding" />

    <Button
        android:id="@+id/btnGoToBrowseActivities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/goToBrowseActivities"
        android:background="@drawable/rounded_green_rectangle"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/btnGoToCreatePage"
        android:textSize="@dimen/button_text"
        android:typeface="serif"
        android:padding="@dimen/button_padding" />


</RelativeLayout>
