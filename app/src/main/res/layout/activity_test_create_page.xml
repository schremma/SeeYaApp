<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation.TestCreatePage"
    android:background="@color/backgroundColor">

    <include
        layout="@layout/tool_bar"
        android:id="@+id/tbar"
        ></include>

    <TextView
        android:text = "What would you like to create?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:background="@drawable/rounded_white_rectangle"
        android:padding="4dp"
        android:layout_margin="8dp"
        android:id="@+id/textView" />

    <Button
        android:id="@+id/btnGoToCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_green_rectangle"
        android:textSize="@dimen/button_text"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/button_padding" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GROUP?"
        android:background="@drawable/rounded_green_rectangle"
        android:textSize="@dimen/button_text"
        android:padding="@dimen/button_padding"
        android:layout_below="@+id/btnGoToCreate"
        android:layout_alignLeft="@+id/btnGoToCreate"
        android:layout_alignStart="@+id/btnGoToCreate"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/btnGoToCreate"
        android:layout_alignEnd="@+id/btnGoToCreate" />


</RelativeLayout>
