<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/backgroundColor">

    <include
        layout="@layout/tool_bar"
        ></include>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_below="@id/tbar"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/tvHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorDarkCyan"
        android:textSize="25sp"
        android:padding="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tvDateLocationString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:layout_below="@+id/tvHeadline"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:padding="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_below="@+id/tvDateLocationString"
        android:padding="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />


    <TextView
        android:id="@+id/tvActivityInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/tvAddress"
        android:background="@drawable/rounded_white_rectangle"
        android:textSize="15sp"
        android:padding="8dp"
        android:lines="3"
        android:scrollbars="vertical"/>

    <TextView
        android:id="@+id/tvNbrOfParticipants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/tvActivityInfo"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text=""
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/tvNbrAttending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNbrOfParticipants"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:padding="4dp"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        />



    <Button
        android:id="@+id/btnSignUpForActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textSize="30sp"
        android:typeface="serif"
        android:layout_below="@+id/tvNbrAttending"
        android:background= "@drawable/rounded_green_rectangle"
        android:layout_marginTop="10dp"/>


</RelativeLayout>
</ScrollView>

</RelativeLayout>