<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="16dp"
    android:background="@color/backgroundColor"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <include
        layout="@layout/tool_bar"
        ></include>


    <Spinner
        android:id="@+id/spinnerMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_spinner"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" />

    <Spinner
        android:id="@+id/spinnerSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerMain"
        android:layout_alignLeft="@+id/spinnerMain"
        android:layout_alignStart="@+id/spinnerMain"
        android:background="@drawable/rounded_spinner_sub"
        android:layout_alignRight="@+id/spinnerMain"
        android:layout_alignEnd="@+id/spinnerMain" />


    <Button
        android:id="@+id/btnNext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:background="@drawable/rounded_green_rectangle"
        android:layout_marginTop="50dp"
        android:textSize="@dimen/button_text"
        android:layout_below="@+id/spinnerSub"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:typeface="serif" />

</RelativeLayout>
